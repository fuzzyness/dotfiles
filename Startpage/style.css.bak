* {
	--night_color1: #2E3440;
	--night_color2: #3B4252;
	--night_color3: #434C5E;
	--night_color4: #4C566A;

	--snow_color1: #D8DEE9;
	--snow_color2: #E5E9F0;
	--snow_color3: #ECEFF4;

	--frost_color1: #8FBCBB;
	--frost_color2: #88C0D0;
	--frost_color3: #81A1C1;
	--frost_color4: #5E81AC;

	--aurora_color1: #BF616A;
	--aurora_color2: #D08770;
	--aurora_color3: #EBCB8B;
	--aurora_color4: #A3BE8C;
	--aurora_color5: #B48EAD;

	font-family: "iosevka comfy";
}

html {
	font-size: 20px;
	background: var(--night_color1) !important;
	font-weight: bold;
}

img {
	position: fixed;
	bottom: 0%;
	right: 0%;
	opacity: 50%;
}

img:hover {
	transition: all 0.5s ease !important;
	opacity: 100%;
}

.container {
	position: absolute;
	top: 48%;
	left: 48%;
	transform: translate(-50%, -50%);
}

.prompt {
	color: var(--snow_color2);
	font-size: 20px;
	font-weight: bold;
	padding-bottom: 0.25rem;
}

.inputfield {
	color: var(--snow_color1);
	font-size: 20px;
	font-weight: bold;
	padding-left: 0.6rem;
	padding-bottom: 0.275rem;
}

span {
	color: var(--aurora_color2);
}

span2 {
	color: var(--aurora_color5);
}

span3 {
	color: var(--frost_color3);
}

span4 {
	color: var(--aurora_color4);
}

span5 {
	color: var(--aurora_color1);
}

h1 {
	display: inline;
	font-size: 20px;
	font-weight: bold;
	color: var(--aurora_color1);
}

.tree > ul {
	margin: 0;
	padding-left: 1.55rem;
}

ul {
	list-style: none;
	padding-left: 2.275rem;
}

li {
	position: relative;
}

li::before, li::after {
	content: "";
	position: absolute;
	left: -0.9rem;
}

li::before {
	border-top: 2px solid var(--night_color4);
	top: 0.5rem;
	width: 0.65rem;
}

li::after {
	border-left: 2px solid var(--night_color4);
	height: 100%;
	top: 0.1rem;
}

li:last-child::after {
	height: 0.5rem;
}

a {
	font-size: 1rem;
	color: var(--snow_color1);
	text-decoration: none;
	outline: none;
}

a:hover {
	color: var(--frost_color3);
	background: var(--night_color1);
	transition: all 0.2s ease !important;
}

input {
	font-size: 1rem;
	color: var(--snow_color3);
	background-color: var(--night_color1);
	border: none;
}
